extends ../layouts/main_layout.pug

block link
  - var selected = 'Мои работы';

block title
  title Мои работы

block content
  section.aboutbox
    .aboutbox-header Мои работы
    .aboutbox-body.clearfix
      .projects-wrapper
        ul.projects-list
          //- Проекты в цикле
          each project in projects
            li.projects-item
              .hover-img
                img.project-img(src="img/work/" + project.image, alt= project.name)
                .zoom-wrapper
                  a.zoom-link(href= project.url, target="_blank")= project.name
              a.project-link(href= project.url, target="_blank")= project.name
              .project-desc= project.description

          //- Добавить проект
          if (auth)
            li.projects-item.add-new-item
              a.add-new-link#add-new-item(href="#")
                .add-new-text Добавить проект

  include ../common/popup.pug
